<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:padding="@dimen/dimen_10"
    android:orientation="vertical" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#EFEFEF"
        android:gravity="center"
        android:padding="5dp"
        android:text="修改个人信息" />

    <RadioGroup
        android:id="@+id/dialog_input_info_rg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:padding="@dimen/dimen_15">

        <RadioButton
            android:checked="true"
            android:id="@+id/dialog_input_info_rg_male"
            android:text="男"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>

        <RadioButton
            android:id="@+id/dialog_input_info_rg_female"
            android:text="女"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
    </RadioGroup>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginRight="@dimen/dimen_4"
            android:id="@+id/dialog_input_info_tv_ok"
            android:background="@drawable/sl_rb_state_btn"
            android:text="确认"
            android:textColor="@color/white"
            android:textSize="@dimen/font_16"
            android:gravity="center"
            android:padding="@dimen/dimen_8"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginLeft="@dimen/dimen_4"
            android:id="@+id/dialog_input_info_tv_cancel"
            android:background="@drawable/shape_maincolor_kuang"
            android:text="取消"
            android:textColor="@drawable/sl_other_rb_text_state_two"
            android:textSize="@dimen/font_16"
            android:gravity="center"
            android:padding="@dimen/dimen_8"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>