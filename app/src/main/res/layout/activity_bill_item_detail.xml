<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <include layout="@layout/title_main"/>

    <RelativeLayout
        android:layout_marginTop="@dimen/dimen_10"
        android:padding="@dimen/dimen_12"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="充电金额"
            style="@style/bill_item_detail_tvstyle_left"
            />

        <TextView
            android:id="@+id/act_bill_detail_tv_amount"
            android:text="100.00"
            style="@style/bill_item_detail_tvstyle_right"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="@dimen/dimen_1"
        android:padding="@dimen/dimen_12"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="类型"
            style="@style/bill_item_detail_tvstyle_left"
            />

        <TextView
            android:id="@+id/act_bill_detail_tv_type"
            android:text="支出"
            style="@style/bill_item_detail_tvstyle_right"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="@dimen/dimen_1"
        android:padding="@dimen/dimen_12"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="时间"
            style="@style/bill_item_detail_tvstyle_left"
            />

        <TextView
            android:id="@+id/act_bill_detail_tv_time"
            android:text="2017-04-46 20:14:09"
            style="@style/bill_item_detail_tvstyle_right"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="@dimen/dimen_1"
        android:padding="@dimen/dimen_12"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="交易单号"
            style="@style/bill_item_detail_tvstyle_left"
            />

        <TextView
            android:id="@+id/act_bill_detail_tv_busNum"
            android:text="123456789"
            style="@style/bill_item_detail_tvstyle_right"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/act_bill_detail_rl_advanceamount"
        android:layout_marginTop="@dimen/dimen_1"
        android:padding="@dimen/dimen_12"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="预交金额"
            style="@style/bill_item_detail_tvstyle_left"
            />

        <TextView
            android:id="@+id/act_bill_detail_tv_advanceamount"
            android:text="6789.00"
            style="@style/bill_item_detail_tvstyle_right"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/act_bill_detail_rl_backamount"
        android:layout_marginTop="@dimen/dimen_1"
        android:padding="@dimen/dimen_12"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="退回金额"
            style="@style/bill_item_detail_tvstyle_left"
            />

        <TextView
            android:id="@+id/act_bill_detail_tv_backamount"
            android:text="9.00"
            style="@style/bill_item_detail_tvstyle_right"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="@dimen/dimen_1"
        android:padding="@dimen/dimen_12"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="支付方式"
            style="@style/bill_item_detail_tvstyle_left"
            />

        <TextView
            android:id="@+id/act_bill_detail_tv_payway"
            android:text="支付宝支付"
            style="@style/bill_item_detail_tvstyle_right"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="@dimen/dimen_1"
        android:padding="@dimen/dimen_12"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="备注"
            style="@style/bill_item_detail_tvstyle_left"
            />

        <TextView
            android:id="@+id/act_bill_detail_tv_remark"
            android:text="充电(充电桩)"
            style="@style/bill_item_detail_tvstyle_right"
            />
    </RelativeLayout>
</LinearLayout>