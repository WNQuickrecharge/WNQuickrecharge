<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="@dimen/default_padding"
    android:paddingRight="@dimen/default_padding"
    android:paddingBottom="@dimen/default_padding15"
    android:paddingTop="@dimen/default_padding">

    <LinearLayout
        android:paddingTop="@dimen/dimen_5"
        android:paddingBottom="@dimen/dimen_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="地址"
            android:textColor="@color/color33"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取消"
            android:textColor="@color/color66"
            android:textSize="@dimen/sp_14" />
    </LinearLayout>

    <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_detail_address"
            android:drawableLeft="@drawable/ic_location"
            android:drawablePadding="@dimen/default_padding5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="详细地址"
            android:textColor="@color/color66"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/tv_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1.8km"
            android:textColor="@color/color66"
            android:textSize="@dimen/sp_14" />
    </LinearLayout>

    <TextView
        android:drawableLeft="@drawable/dianhua"
        android:drawablePadding="@dimen/default_padding5"
        android:id="@+id/tv_phonenum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_padding5"
        android:text="137242537"
        android:textColor="@color/main_color"
        android:textSize="@dimen/sp_14" />

    <TextView
        android:drawableLeft="@drawable/ic_location"
        android:drawablePadding="@dimen/default_padding5"
        android:id="@+id/tv_price_per"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_padding5"
        android:text="电费:1.5元/度,服务费:0.5元/度"
        android:textColor="@color/color33"
        android:textSize="@dimen/sp_14" />

    <TextView
        android:id="@+id/tv_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_padding5"
        android:text="空闲"
        android:drawablePadding="@dimen/default_padding5"
        android:drawableLeft="@drawable/ic_number"
        android:textSize="@dimen/sp_14" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_padding"
        android:paddingRight="@dimen/dp_22"
        android:paddingLeft="@dimen/dp_22"
        android:paddingTop="@dimen/dimen_5"
        android:paddingBottom="@dimen/dimen_5"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_fav"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/font_20"
            android:background="@drawable/shape_maincolor_kuang"
            android:button="@null"
            android:drawableLeft="@drawable/ic_fav"
            android:drawablePadding="@dimen/default_padding5"
            android:clickable="true"
            android:gravity="center"
            android:paddingBottom="@dimen/dimen_8"
            android:paddingLeft="@dimen/default_padding15"
            android:paddingRight="@dimen/default_padding15"
            android:paddingTop="@dimen/dimen_8"
            android:text="收藏"
            android:textColor="@drawable/sl_other_rb_text_state_two"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/tv_nav"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/font_20"
            android:background="@drawable/sl_rb_state_btn"
            android:button="@null"
            android:checked="true"
            android:gravity="center"
            android:paddingBottom="@dimen/dimen_8"
            android:drawableLeft="@drawable/ic_daohang"
            android:drawablePadding="@dimen/default_padding5"
            android:paddingLeft="@dimen/default_padding15"
            android:paddingRight="@dimen/default_padding15"
            android:paddingTop="@dimen/dimen_8"
            android:clickable="true"
            android:text="导航"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14" />


    </LinearLayout>
</LinearLayout>