<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#11ffffff">

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:layout_centerInParent="true"
        android:background="@drawable/free_dialog_bg"
        >

        <TextView
            android:id="@+id/right_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="15dp"
            android:layout_alignParentRight="true"
            android:drawableRight="@mipmap/delete"
            android:textColor="@color/color33"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/message_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/right_delete"
            android:textColor="@color/color33"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textSize="@dimen/sp_18"
            android:text="确认取消补电请求吗？" />


        <TextView
            android:id="@+id/tv_confirm_cancel_ask"
            android:layout_alignParentBottom="true"
            android:text="@string/confirm"
            android:gravity="center"
            android:layout_marginBottom="@dimen/dimen_10"
            android:textColor="@color/main_color_red"
            android:background="@drawable/bg_confirm_red_circle"
            android:layout_centerHorizontal="true"
            android:layout_width="150dp"
            android:layout_height="30dp"
            />

    </RelativeLayout>

</RelativeLayout>
