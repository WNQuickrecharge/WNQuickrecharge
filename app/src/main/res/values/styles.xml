<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="EditTextStyle" parent="@android:style/TextAppearance.DeviceDefault.Widget.EditText">
        <item name="android:padding">5dp</item>
        <item name="android:textColorHint">@color/colorCC</item>
        <item name="android:textSize">@dimen/default_textsize</item>
        <item name="android:textColor">@color/color33</item>
        <item name="android:background">@null</item>
    </style>

    <!-- 按扭样式 -->
    <style name="ButtonStyle">
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/default_padding</item>
        <item name="android:textSize">@dimen/default_textsize16</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/shape_maincolor</item>
    </style>
    <style name="ButtonStyle1">
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/default_padding</item>
        <item name="android:textSize">@dimen/default_textsize16</item>
        <item name="android:textColor">@color/main_color</item>
        <item name="android:background">@drawable/shape_maincolor_kuang</item>
    </style>
    <style name="ButtonStyle_small">
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/default_textsize14</item>
        <item name="android:textColor">@color/main_color</item>
        <item name="android:background">@drawable/shape_maincolor_kuang</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:paddingLeft">@dimen/default_padding</item>
        <item name="android:paddingRight">@dimen/default_padding</item>
    </style>

    <style name="ButtonStyle_small_gray">
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/default_textsize14</item>
        <item name="android:textColor">@color/color99</item>
        <item name="android:background">@drawable/shape_gray_kuang</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:paddingLeft">@dimen/default_padding</item>
        <item name="android:paddingRight">@dimen/default_padding</item>
    </style>
    <style name="ButtonStyle_deleteorder">
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/default_padding</item>
        <item name="android:textSize">@dimen/default_textsize16</item>
        <item name="android:textColor">@color/main_color_red</item>
        <item name="android:background">@drawable/shape_delete_order</item>
    </style>

    <style name="myRadioButto">
        <item name="android:background">@null</item>
        <item name="android:button">@null</item>
        <item name="android:drawablePadding">@dimen/default_padding5</item>
        <item name="android:textSize">@dimen/default_textsize14</item>ba
        <item name="android:textColor">@drawable/selector_homecolor</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="text_mainstyle">
        <item name="android:textColor">@color/color33</item>
        <item name="android:textSize">@dimen/default_textsize14</item>
    </style>
    <style name="text_mainstyle12">
        <item name="android:textColor">@color/color99</item>
        <item name="android:textSize">@dimen/default_textsize12</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/main_color</item>
    </style>

    <style name="tv_match">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/font_14</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="myRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/layer_rating</item>
        <item name="android:minHeight">@dimen/ratingbar</item>
        <item name="android:maxHeight">@dimen/ratingbar</item>

    </style>

    <style name="anim_popup_fadeInOrOut">
        <item name="android:windowEnterAnimation">@anim/pop_fade_in</item>
        <item name="android:windowExitAnimation">@anim/pop_fade_out</item>
    </style>

    <style name="anim_popup_fadeOut_dir_in">
        <item name="android:windowEnterAnimation">@anim/slide_in</item>
        <item name="android:windowExitAnimation">@anim/pop_fade_out</item>
    </style>
    <style name="anim_popup_dir">
        <item name="android:windowEnterAnimation">@anim/slide_in</item>
        <item name="android:windowExitAnimation">@anim/slide_out</item>
    </style>
    <style name="MyDialog" parent="android:style/Theme.Dialog">
        <!--背景颜色及和透明程度-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--是否去除标题 -->
        <item name="android:windowNoTitle">true</item>
        <!--是否去除边框-->
        <item name="android:windowFrame">@null</item>
        <!--是否浮现在activity之上-->
        <item name="android:windowIsFloating">true</item>
        <!--是否模糊-->
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="bill_item_detail_tvstyle_right">
        <item name="android:textColor">@color/color33</item>
        <item name="android:textSize">@dimen/default_textsize18</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="bill_item_detail_tvstyle_left">
        <item name="android:textColor">@color/color99</item>
        <item name="android:textSize">@dimen/default_textsize16</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <style name="loading_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/bg_loading</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
</resources>
